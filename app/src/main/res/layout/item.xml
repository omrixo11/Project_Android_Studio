<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/bg_color"
        android:id="@+id/mainLayout"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/idd"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="id  "
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/titree"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Name"
                android:layout_below="@+id/idd"
                android:text="Year:  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/nbrPieces"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titree"
                android:text="Name   :  "
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/SerialNumberr"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="id :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Quantityy"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/SerialNumberr"
                android:text="Name :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Pricee"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Quantityy"
                android:text="Quantity                :  "
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/Product_id"
                android:text="id"
                android:layout_height="10dp"
                android:layout_width="10dp"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

