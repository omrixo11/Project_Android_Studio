<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/bg_color"
        android:id="@+id/mainLayoutc"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/Brandc"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Brand  "
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Yearc"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Namec"
                android:layout_below="@+id/Brandc"
                android:text="Year:  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Namec"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Yearc"
                android:text="Name   :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/SerialNumberc"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Namec"
                android:text="Serial Number   :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Quantityc"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/SerialNumberc"
                android:text="Quantity   :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Pricec"
                android:paddingLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Quantityc"
                android:text="Price   :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/branddc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Brand             :"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Nameec"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Namec"
                android:layout_below="@+id/Yearrc"
                android:text="Name                 :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Yearrc"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/branddc"
                android:text="Year               :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/SerialNumberrc"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Nameec"
                android:text="Serial Number:  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Quantityyc"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/SerialNumberrc"
                android:text="Quantity           :  "
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Priceec"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Quantityyc"
                android:text="Price                :  "
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/Product_idc"
                android:text="id"
                android:layout_height="10dp"
                android:layout_width="10dp"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
